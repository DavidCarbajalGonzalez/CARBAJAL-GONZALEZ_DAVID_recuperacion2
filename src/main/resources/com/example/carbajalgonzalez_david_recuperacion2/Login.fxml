<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.example.carbajalgonzalez_david_recuperacion2.controller.LoginController"
          alignment="CENTER" hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml">

    <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="tfUsuario" promptText="Nombre de usuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="pfPassword" promptText="ContraseÃ±a" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Entrar" onAction="#onEntrar"
            GridPane.rowIndex="2" GridPane.columnIndex="1"
            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Label fx:id="lblError" textFill="red" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</GridPane>
