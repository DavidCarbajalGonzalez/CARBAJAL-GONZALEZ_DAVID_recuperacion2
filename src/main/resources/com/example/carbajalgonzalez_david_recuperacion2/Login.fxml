<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.carbajalgonzalez_david_recuperacion2.controller.LoginController"
            prefWidth="400" prefHeight="250">

    <children>
        <Label text="Usuario:" layoutX="50" layoutY="50"/>
        <TextField fx:id="txtUsuario" layoutX="140" layoutY="45" prefWidth="200"/>

        <Label text="Contraseña:" layoutX="50" layoutY="100"/>
        <PasswordField fx:id="pwdPassword" layoutX="140" layoutY="95" prefWidth="200"/>

        <Label text="Rol:" layoutX="50" layoutY="150"/>
        <ComboBox fx:id="cmbRol" layoutX="140" layoutY="145" prefWidth="200"/>

        <Button text="Iniciar sesión"
                layoutX="140" layoutY="195"
                onAction="#handleLogin"/>
    </children>
</AnchorPane>
